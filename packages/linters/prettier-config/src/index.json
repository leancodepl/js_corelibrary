{
  "printWidth": 120,
  "useTabs": false,
  "arrowParens": "avoid",
  "trailingComma": "all",
  "tabWidth": 2,
  "bracketSameLine": true,
  "singleQuote": false,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.json", ".prettierrc", ".eslintrc", ".stylelintrc"],
      "options": {
        "tabWidth": 2
      }
    }
  ],
  "proseWrap": "always",
  "semi": false
}
