{
  "name": "@leancodepl/prettier-config",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/linters/prettier/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p dist/packages/linters/prettier-config",
          "cp -r packages/linters/prettier dist/packages/linters/prettier-config"
        ],
        "parallel": false
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @leancodepl/prettier-config {args.ver} {args.tag}"
    }
  },
  "tags": []
}
