{
  "name": "@leancodepl/eslint-plugin",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/linters/eslint-plugin/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "command": "node tools/scripts/copy.mjs packages/linters/eslint-plugin {args.outputPath}",
      "configurations": {
        "args": {
          "outputPath": "{options.outputPath}"
        }
      },
      "options": {
        "outputPath": "dist/packages/linters/eslint-plugin"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @leancodepl/eslint-plugin {args.registry} {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "command": "NODE_OPTIONS='--experimental-vm-modules' npx jest --config packages/linters/eslint-plugin/jest.config.js --passWithNoTests=true"
      }
    }
  }
}
