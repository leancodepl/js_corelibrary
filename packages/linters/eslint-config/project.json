{
  "name": "@leancodepl/eslint-config",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/linters/eslint-config/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build-to-dist": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/linters/eslint-config",
        "tsConfig": "packages/linters/eslint-config/tsconfig.lib.json",
        "packageJson": "packages/linters/eslint-config/package.json",
        "main": "packages/linters/eslint-config/src/index.ts",
        "assets": ["packages/linters/eslint-config/*.md"]
      }
    },
    "copy-from-dist": {
      "command": "node tools/scripts/copy.mjs dist/packages/linters/eslint-config packages/linters/eslint-config/build"
    },
    "build": {
      "command": "nx run eslint-config:build-to-dist && nx run eslint-config:copy-from-dist"
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @leancodepl/eslint-config {args.registry} {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/linters/eslint-config/jest.config.ts"
      }
    }
  }
}
