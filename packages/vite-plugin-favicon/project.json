{
  "name": "@leancodepl/vite-plugin-favicon",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/vite-plugin-favicon/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/vite-plugin-favicon",
        "main": "packages/vite-plugin-favicon/src/index.ts",
        "tsConfig": "packages/vite-plugin-favicon/tsconfig.json",
        "assets": [
          {
            "glob": "packages/vite-plugin-favicon/README.md",
            "input": ".",
            "output": "."
          }
        ],
        "project": "packages/vite-plugin-favicon/package.json",
        "format": [
          "cjs",
          "esm"
        ],
        "generateExportsField": true
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @leancodepl/vite-plugin-favicon {args.registry} {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    }
  }
}
