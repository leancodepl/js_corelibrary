<mjml>
  <mj-head>
    <mj-title>{{t "password_reset_title"}}</mj-title>
  </mj-head>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-text>
          <h1>{{t "password_reset_title"}}</h1>
          
          <!-- Example of parameterized translation for Razor mode -->
          <p>{{t "greeting_with_name", (name: "@Model.UserName")}}</p>
          
          <p>{{t "password_reset_description"}}</p>
          
          <!-- Example of account status with Razor parameter -->
          <p>{{t "account_status", (status: "@Model.AccountStatus")}}</p>

          <mj-button href="@Model.ResetLink">
            {{t "password_reset_button"}}
          </mj-button>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
