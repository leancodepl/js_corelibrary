<mjml>
  <mj-head>
    <mj-title>{{t "password_reset_title"}}</mj-title>
  </mj-head>
  <mj-body>
    <mj-section>
      <mj-column>
          <mj-text>{{t "password_reset_title"}}</mj-text>
          <mj-text>{{t "greeting_with_name", (name: "@Model.UserName")}}</mj-text>
          <mj-text>{{t "password_reset_description"}}</mj-text>
          <mj-text>{{t "account_status", (status: "@Model.AccountStatus")}}</mj-text>
          <mj-button href="@Model.ResetLink">
            {{t "password_reset_button"}}
          </mj-button>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
