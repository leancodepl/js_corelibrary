{
  "name": "@leancodepl/folder-structure-cruiser",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/folder-structure-cruiser/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/folder-structure-cruiser",
        "main": "packages/folder-structure-cruiser/src/index.ts",
        "tsConfig": "packages/folder-structure-cruiser/tsconfig.lib.json",
        "assets": [
          "packages/folder-structure-cruiser/*.md",
          {
            "glob": "**/*.json",
            "input": "packages/folder-structure-cruiser/src",
            "output": "."
          }
        ],
        "project": "packages/folder-structure-cruiser/package.json"
      },
      "compiler": "swc",
      "format": [
        "cjs",
        "esm"
      ]
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @leancodepl/folder-structure-cruiser {args.registry} {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/folder-structure-cruiser/jest.config.ts"
      }
    }
  }
}
