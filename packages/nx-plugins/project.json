{
  "name": "@leancodepl/nx-plugins",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-plugins/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nx-plugins",
        "main": "packages/nx-plugins/src/index.ts",
        "tsConfig": "packages/nx-plugins/tsconfig.lib.json",
        "assets": ["packages/nx-plugins/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @leancodepl/nx-plugins {args.registry} {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/nx-plugins/jest.config.ts"
      }
    }
  }
}
