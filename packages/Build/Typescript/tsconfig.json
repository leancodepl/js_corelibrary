{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6"],
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
