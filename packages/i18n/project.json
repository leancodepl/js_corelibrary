{
  "name": "@leancodepl/i18n",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/i18n/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/i18n",
        "tsConfig": "packages/i18n/tsconfig.lib.json",
        "project": "packages/i18n/package.json",
        "entryFile": "packages/i18n/src/index.ts",
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "compiler": "swc",
        "format": ["cjs", "esm"],
        "assets": [
          {
            "glob": "packages/i18n/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @leancodepl/i18n {args.registry} {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/i18n/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/i18n/**/*.{ts,tsx,js,jsx}"]
      }
    }
  }
}
