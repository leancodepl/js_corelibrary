{
    "jsc": {
        "target": "es2022",
        "parser": {
            "syntax": "typescript",
            "tsx": true,
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "decoratorMetadata": true,
            "legacyDecorator": true,
            "react": { "runtime": "automatic" }
        },
        "keepClassNames": true,
        "externalHelpers": true,
        "loose": true
    },
    "module": {
        "type": "es6",
        "strict": true,
        "noInterop": true
    },
    "sourceMaps": true,
    "exclude": [
        "jest.config.ts",
        ".*\\.spec.tsx?$",
        ".*\\.test.tsx?$",
        "./src/jest-setup.ts$",
        "./**/jest-setup.ts$",
        ".*.js$"
    ]
}
