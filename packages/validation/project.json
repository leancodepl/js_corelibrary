{
  "name": "@leancodepl/validation",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/validation/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/validation",
        "main": "packages/validation/src/index.ts",
        "tsConfig": "packages/validation/tsconfig.lib.json",
        "assets": [],
        "project": "packages/validation/package.json",
        "compiler": "swc",
        "format": ["cjs", "esm"],
        "external": ["@leancodepl/cqrs-client-base"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @leancodepl/validation {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/validation/**/*.ts", "packages/validation/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/validation/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
