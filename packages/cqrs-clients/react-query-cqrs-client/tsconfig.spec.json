{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "module": "commonjs",
    "declaration": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ]
}
