{
  "version": "4.2.0",
  "packages": [
    "packages/**/*"
  ],
  "command": {
    "publish": {
      "noVerifyAccess": true
    },
    "version": {
      "message": "chore(release): %s",
      "ignoreChanges": [
        "**/__tests__/**",
        "**/*.md",
        "**/jest.config.js"
      ],
      "conventionalCommits": true,
      "changelogPreset": "angular-bitbucket"
    }
  }
}
