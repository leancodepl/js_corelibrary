{
  "version": "6.2.0-alpha.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "noVerifyAccess": true,
      "registry": "https://f.feedz.io/leancode/corelibrary/npm"
    },
    "version": {
      "message": "chore(release): %s",
      "ignoreChanges": [
        "**/__tests__/**",
        "**/*.md",
        "**/jest.config.js"
      ],
      "conventionalCommits": true,
      "changelogPreset": "angular-bitbucket"
    }
  }
}
