{
  "version": "4.2.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "noVerifyAccess": true,
      "registry": "http://localhost:4873"
    },
    "version": {
      "message": "chore(release): %s",
      "ignoreChanges": ["**/__tests__/**", "**/*.md", "**/jest.config.js"],
      "conventionalCommits": true,
      "changelogPreset": "angular-bitbucket"
    }
  }
}
