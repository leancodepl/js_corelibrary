{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": ".",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "dom",
      "es6"
    ],
    "removeComments": false,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
